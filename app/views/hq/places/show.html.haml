- content_for :toolbar do
  = link_to edit_hq_place_path(@place ), class: 'btn btn-default' do
    %i.icon-pencil
    = t('action_button.edit')
.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: Place.model_name.human)
  .panel-body
    = show_for @place do |s|
      = s.attribute :name
      = s.attribute :address
      = s.attribute :phone
      = s.attribute :email
      = s.attribute :description
      = s.attribute :phone
      = s.attribute :subcategory_id do
        = @place.subcategory.name
      = s.attribute :city_id do
        = @place.city.name
      -#%strong
      -#  = "Kategori Adı"
      -#%br
      -#  = @place.subcategory.name
      -#%strong
      -#  = "Bulunduğu Şehir"
      -#%br
      -#  = @place.city.name
