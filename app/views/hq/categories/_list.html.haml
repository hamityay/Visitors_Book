.panel-body.filters
  = render 'filters'
%table.table
  %thead
    %tr
      %th= sort_link(@search, :id, t('activerecord.attributes.category.id'))
      %th= sort_link(@search, :name, t('activerecord.attributes.category.name'))
      %th= sort_link(@search, :created_at, t('activerecord.attributes.category.created_at'))
      %th.actions
        = t('view.actions')
  %tbody
    = render @categories
