- count = 0
- @places.each do |p|
  - count += 1
  .col-lg-3
    .panel.panel-success.text-center.plc-index
      .panel-heading
        %i.icon-edit.icon-large
        = link_to p.name, place_path(p)
      .panel-body
        = link_to place_path(p) do
          = image_tag p.images.first.photo(:thumb)
        %hr
        %strong
          = "Info"
        %br
        = p.description
        %br
        = p.phone
        %br
        %strong
          = "Kategori AdÄ±"
        %br
          = p.subcategory.name
        %br
          = p.city.name
        %br
        = link_to 'More Details', place_path(p)
  - if count == 4
    .col-lg-12
      - count = 0