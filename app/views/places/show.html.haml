.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: Place.model_name.human)
  .panel-body
    = show_for @place do |s|
      = s.attribute :name
      = s.attribute :address
      = s.attribute :phone
      = s.attribute :email
      = s.attribute :description
      = s.attribute :phone
      %strong
        = "Kategori Adı"
      %br
        = @place.subcategory.name
      %strong
        = "Bulunduğu Şehir"
      %br
        = @place.city.name

  .panel-footer
    = link_to root_path, class: 'btn-link' do
      %i.fa.fa-arrow-left
      = t('btn.back')
    = link_to edit_place_path(@place), class: 'btn btn-link' do
      %i.fa.fa-pencil
      = t('navbar.edit_place_info')